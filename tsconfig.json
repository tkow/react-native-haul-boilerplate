{
  "compilerOptions": {
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2015",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "lib": ["es2015"],
    "paths": {
      "~": ["./"],
      "~/*": ["./*", "./*.native", "./*.ios", "./*.android"],
    },
  },
  "include": ["./src"],
  "exclude": [
    "src/assets",
    "**/node_modules",
    "**/*.web.tsx",
    "**/*.web.ts"
  ]
}